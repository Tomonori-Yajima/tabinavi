<div class="card">
  <div class="card-header bg-info text-white">
      <h3><%= post.name %></h3>
      <h4><%= post.address %></h4>
      <% post.tags.each do |tag| %>
        <span class="badge badge-light"><%= tag.name %></span>
      <% end %>
      
      
  </div>
  <div class="card-body">
      <p class="card-text"><%= simple_format(post.content) %></p>
      <span><%= image_tag post.display_image if post.image.attached? %></span>
  </div>
  <% if current_user?(@user) %>
    <td><%= link_to "詳細", post, id: "detail-" + post.id.to_s, class: "btn btn-primary" %></td>
    <td><%= link_to "削除" , post, class: "btn btn-primary", method: :delete, data: {confirm: "投稿記事を削除しますか？", cancel: "キャンセル", commit: "削除する", title: "削除の確認"} %></td>
  <% end %>
  <div class="card-footer">
      <p class="text-right font-weight-bold mr-10"><%= post.user_id %></p>
  </div>
  
</div>



<script type="text/javascript">
  $("#micropost_image").bind("change", function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 1) {
      alert("アップロードできる最大のファイルサイズは1MBです。");
      $("#micropost_image").val("");
    }
  });
</script>